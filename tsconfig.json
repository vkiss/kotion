{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "outDir": "./",
    "removeComments": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}